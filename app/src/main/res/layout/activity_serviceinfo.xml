<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgound"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <LinearLayout
                        android:id="@+id/li_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:layout_marginLeft="14dp"
                            android:src="@drawable/ic_info_32dp"/>

                        <com.greencross.medigene.component.CFontTextView
                            style="@style/common_textview_fields"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:text="건강상담"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:font="@string/KelsonSansBold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        android:orientation="horizontal">


                        <com.greencross.medigene.component.CFontTextView
                            style="@style/common_textview_fields"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="13dp"
                            android:textSize="13sp"
                            android:textColor="@color/colorDark"
                            android:text="건강에 대한 모든 궁금증을 해결해 드립니다." />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/setting_member_info_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        android:orientation="horizontal">


                        <com.greencross.medigene.component.CFontTextView
                            style="@style/common_textview_fields"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="13dp"
                            android:textSize="13sp"
                            android:textColor="@color/colorDark"
                            android:text="상담분야 (신경과, 정신과, 일반외과, 이비인후과,\n 안과, 가정의학과,신경외과, 내과, 비뇨기과, 산부인과, \n정형외과, 흉부외과, 임상영양, 건강운동, 심리)" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:duplicateParentState="true"
                        android:orientation="horizontal">

                        <com.greencross.medigene.component.CFontTextView
                            android:id="@+id/CFontTextView2"
                            style="@style/common_textview_fields"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="13dp"
                            android:text="상담시간 : 월~금요일(09시 ~ 18시)\n토요일(09시 ~ 13시)\n일,공휴일 (휴무)"
                            android:textColor="@color/colorDark"
                            android:textSize="13sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:layout_marginLeft="14dp"
                            android:src="@drawable/ic_info_32dp"/>

                        <com.greencross.medigene.component.CFontTextView
                            style="@style/common_textview_fields"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:text="진료예약 및 의료진 안내"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:font="@string/KelsonSansBold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        android:orientation="horizontal">

                        <com.greencross.medigene.component.CFontTextView
                            style="@style/common_textview_fields"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="13dp"
                            android:textSize="13sp"
                            android:textColor="@color/colorDark"
                            android:text="질병 진료 및 치료를 위한 병원ㆍ의료진 정보를 안내해드리고 진료예약도 대행해 드립니다.\n(서울대학교 병원, 세브란스병원, 서울아산병원, 서울성모병원, 삼성서울 병원 등 전국 30개 대형병원 네트워크)" />
                    </LinearLayout>


                    <com.greencross.medigene.component.CFontButton
                        android:id="@+id/btn_reservation_hospital"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/main_subbox"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="진료예약 제휴병원"
                        android:textColor="@color/colorWhite" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:layout_marginLeft="14dp"
                            android:src="@drawable/ic_info_32dp"
                            android:layout_gravity="center_vertical"/>

                        <com.greencross.medigene.component.CFontTextView
                            style="@style/common_textview_fields"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:text="건강검진 우대 및 예약"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <com.greencross.medigene.component.CFontTextView
                            android:id="@+id/CFontTextView"
                            style="@style/common_textview_fields"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="13dp"
                            android:textSize="13sp"
                            android:textColor="@color/colorDark"
                            android:text="건강검진을 예약해드리고 우대가로 제공해드립니다.\n(전국 90여개 제휴 병원 네트워크)" />


                    </LinearLayout>

                    <com.greencross.medigene.component.CFontButton
                        android:id="@+id/btn_health_hospital"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/main_subbox"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="건강검진 제휴병원"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <com.greencross.medigene.component.CFontButton
            android:id="@+id/btn_service_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMain"
            android:text="서비스 신청"
            android:textColor="@color/colorWhite"
            app:font="@string/KelsonSansBold" />
    </LinearLayout>


    <include
        layout="@layout/app_bar_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/activity_navigation_drawer"/>

</android.support.v4.widget.DrawerLayout>