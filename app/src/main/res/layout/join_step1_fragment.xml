<?xml version="1.0" encoding="utf-8"?><!-- 회원가입 1/3-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackgound"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgound"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_man" />

                    <com.greencross.medigene.component.CFontTextView
                        style="@style/common_textview_fields"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="0dp"
                        android:text="이름"
                        android:textSize="13sp"
                        app:font="@string/KelsonSansBold" />
                </LinearLayout>


                <com.greencross.medigene.component.CFontEditText
                    android:id="@+id/login_name_edittext"
                    style="@style/common_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:hint="@string/join_step1_name_hint"
                    android:maxLength="6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_form_birth" />

                    <com.greencross.medigene.component.CFontTextView
                        style="@style/common_textview_fields"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="0dp"
                        android:text="생년월일"
                        android:textSize="13sp"
                        app:font="@string/KelsonSansBold" />
                </LinearLayout>

                <com.greencross.medigene.component.CFontEditText
                    android:id="@+id/join_step1_birth_edittext1"
                    style="@style/common_edittext_style"
                    android:layout_width="match_parent"
                    android:hint="예) 19830519"
                    android:inputType="number"
                    android:maxLength="8"
                    android:maxLines="1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_form_gender" />

                    <com.greencross.medigene.component.CFontTextView
                        style="@style/common_textview_fields"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="0dp"
                        android:text="성별"
                        android:textSize="13sp"
                        app:font="@string/KelsonSansBold" />
                </LinearLayout>


                <com.greencross.medigene.component.CFontCheckBox
                    android:id="@+id/join_step1_sex1"
                    style="@style/common_checkbox2_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:checked="true"
                    android:text="남자"
                    android:textSize="11dp" />


                <com.greencross.medigene.component.CFontCheckBox
                    android:id="@+id/join_step1_sex2"
                    style="@style/common_checkbox2_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text=" 여자"
                    android:textSize="11dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_form_mobile" />

                    <com.greencross.medigene.component.CFontTextView
                        style="@style/common_textview_fields"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="0dp"
                        android:text="휴대전화"
                        android:textSize="13sp"
                        app:font="@string/KelsonSansBold" />
                </LinearLayout>

                <com.greencross.medigene.component.CFontEditText
                    android:id="@+id/join_step1_phone_edittext1"
                    style="@style/common_edittext_style"
                    android:layout_width="match_parent"
                    android:hint="휴대폰번호"
                    android:inputType="number"
                    android:maxLength="11"
                    android:maxLines="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_form_filght" />

                    <com.greencross.medigene.component.CFontTextView
                        style="@style/common_textview_fields"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="0dp"
                        android:text="내외국인"
                        android:textSize="13sp"
                        app:font="@string/KelsonSansBold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.greencross.medigene.component.CFontCheckBox
                        android:id="@+id/join_step1_inter1"
                        style="@style/common_checkbox2_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:checked="true"
                        android:text="내국인"
                        android:textSize="11dp" />


                    <com.greencross.medigene.component.CFontCheckBox
                        android:id="@+id/join_step1_inter2"
                        style="@style/common_checkbox2_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="외국인"
                        android:textSize="11dp" />


                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorWhite"
                android:paddingLeft="0dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorFieldLine" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorFieldLine" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@color/colorFieldLine" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorFieldLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <com.greencross.medigene.component.CFontCheckBox
                                android:id="@+id/join_step1_checkagree1"
                                style="@style/common_checkbox_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="@string/join_step1_contract1"
                                android:textSize="11dp" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.greencross.medigene.component.CFontButton
                                    android:id="@+id/btn_agree1_detail"
                                    android:layout_width="70dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@color/colorSub"
                                    android:text="내용확인"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="12dp"
                                    app:font="@string/KelsonSansBold" />
                            </RelativeLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <com.greencross.medigene.component.CFontCheckBox
                                android:id="@+id/join_step1_checkagree2"
                                style="@style/common_checkbox_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="23dp"
                                android:text="@string/join_step1_contract2"
                                android:textSize="11dp" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.greencross.medigene.component.CFontButton
                                    android:id="@+id/btn_agree2_detail"
                                    android:layout_width="70dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@color/colorSub"
                                    android:text="내용확인"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="12dp"
                                    app:font="@string/KelsonSansBold" />
                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


        <com.greencross.medigene.component.CFontButton
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:background="@color/colorMain"
            android:text="다음"
            android:textColor="@color/colorWhite"
            app:font="@string/KelsonSansBold" />

    </RelativeLayout>

</LinearLayout>
