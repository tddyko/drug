<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="30dp"
    android:layout_marginTop="30dp"
    android:background="@color/colorBackgound"
    android:orientation="vertical"
    android:scaleType="fitCenter">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/setCancelButton"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="0dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="0dp">

                <TimePicker
                    android:id="@+id/timePicker1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- 구분선 -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorFieldsNor" />
            <!-- Button 요일 설정 -->

            <LinearLayout
                android:id="@+id/week_button"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="0dp"
                android:gravity="center"
                android:background="@color/colorGray"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_sun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/sun"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/sun_check_box_selector"
                        android:button="@android:color/transparent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_mon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/mon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/mon_check_box_selector"
                        android:button="@android:color/transparent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_tue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/tue"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/tue_check_box_selector"
                        android:button="@android:color/transparent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_wed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/wed"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/wed_check_box_selector"
                        android:button="@android:color/transparent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_thur"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/thur"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/thu_check_box_selector"
                        android:button="@android:color/transparent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_fri"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/fri"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/fri_check_box_selector"
                        android:button="@android:color/transparent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_sat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/sat"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/sat_check_box_selector"
                        android:button="@android:color/transparent" />
                </LinearLayout>
            </LinearLayout>

            <!-- 구분선 -->

            <TextView
                android:id="@+id/anarm_set_d3"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_margin="5dp"
                android:background="@color/colorFieldsNor" />
            <!-- 구분선 -->


            <!-- 진동 -->

            <com.greencross.medigene.component.CFontEditText
                android:id="@+id/txt_input_drug"
                style="@style/common_edittext_style"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="약이름 입력"
                app:font="@string/KelsonSansRegular" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/setCancelButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/set"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorSub"
                android:text="완료"
                android:textColor="@color/colorWhite"></Button>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>