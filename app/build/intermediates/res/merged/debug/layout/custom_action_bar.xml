<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorWhite">

    <ImageButton
        android:id="@+id/action_menu_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_mainmenu"
        />

    <ImageButton
        android:id="@+id/action_bar_back_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@null"
        android:padding="0dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_back"
        android:visibility="gone"/>

    <com.greencross.medigene.component.CFontTextView
        android:id="@+id/action_bar_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="@color/colorMain"
        android:textSize="20sp"
        app:font="@string/KelsonSansBold"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/action_bar_medi_btn"
            android:layout_width="15dp"
            android:layout_height="21dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/icon_write_medi"
            android:padding="15dp"
            android:visibility="gone"
            />

        <ImageButton
            android:id="@+id/action_bar_band_step_btn"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/icon_reflash"
            android:padding="15dp"
            android:visibility="gone"
            />

        <ImageButton
            android:id="@+id/action_bar_write_step_btn"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/icon_targget"
            android:padding="15dp"
            android:visibility="gone"
            />

        <ImageButton
            android:id="@+id/action_bar_write_btn"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/btn_dev_new_red"
            android:padding="15dp"
            android:visibility="gone"
            />

        <ImageButton
            android:id="@+id/action_bar_device_btn"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/icon_device"
            android:padding="15dp"
            android:visibility="gone"
            />

        <ImageButton
            android:id="@+id/action_bar_bluetooth_btn"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/icon_bluetooth"
            android:padding="15dp"
            android:visibility="gone"
            />

        <ImageButton
            android:id="@+id/action_bar_setting_btn"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_setting_text"
            android:padding="15dp"/>

        <com.greencross.medigene.component.CFontButton
            android:id="@+id/action_bar_save_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/action_bar_save_btn"
            android:text="@string/text_save"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:visibility="gone"
            />
    </LinearLayout>

    <View
        android:id="@+id/action_bar_block_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/block_color"
        android:clickable="true"
        android:visibility="gone"/>


    <View
        android:id="@+id/action_bar_foot_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorMain"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>